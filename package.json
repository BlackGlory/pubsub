{
  "private": true,
  "name": "pubsub",
  "version": "5.1.2",
  "repository": "git@github.com:BlackGlory/pubsub.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "prepare": "ts-patch install -s",
    "deduplicate": "yarn-deduplicate",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "vitest run",
    "clean": "rimraf lib dist",
    "build": "tsc --project tsconfig.build.json",
    "bundle": "webpack --stats-error-details",
    "start": "node dist/index.cjs",
    "smoke": "cross-env NODE_ENV=test node dist/index.cjs",
    "docker:build": "docker build --tag pubsub .",
    "docker:test": "run-s docker:test:clean docker:test:build docker:test:run",
    "docker:coverage": "run-s docker:test:clean docker:test:build docker:test:coverage docker:test:clean",
    "docker:test:build": "docker compose --file docker-compose.test.yml build",
    "docker:test:run": "docker compose --file docker-compose.test.yml run --rm test",
    "docker:test:coverage": "docker compose --file docker-compose.test.yml run --rm coverage",
    "docker:test:clean": "docker compose --file docker-compose.test.yml down",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s prepare clean lint build test bundle smoke",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@blackglory/http-status": "^2.0.3",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^10.0.1",
    "@types/node": "22",
    "@types/semver": "^7.7.1",
    "cross-env": "^10.1.0",
    "eslint": "^10.0.0",
    "extra-fetch": "^5.2.0",
    "extra-request": "^11.0.2",
    "extra-response": "^0.6.0",
    "hotypes": "^0.6.5",
    "husky": "4",
    "iterable-operator": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.3",
    "standard-version": "^9.5.0",
    "ts-patch": "^3.3.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "typescript-transform-paths": "^3.5.6",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18",
    "webpack": "^5.105.2",
    "webpack-cli": "^6.0.1",
    "yarn-deduplicate": "^6.0.2"
  },
  "dependencies": {
    "@blackglory/errors": "^3.0.3",
    "@blackglory/prelude": "^0.4.0",
    "@blackglory/structures": "^0.14.11",
    "@blackglory/wait-for": "^0.8.4",
    "@fastify/cors": "^8.2.1",
    "dotenv": "^17.3.1",
    "extra-abort": "^0.4.1",
    "extra-defer": "^0.3.1",
    "extra-filesystem": "^0.6.1",
    "extra-lazy": "^2.0.2",
    "extra-promise": "^7.0.1",
    "extra-semver": "^0.2.3",
    "extra-sse": "^0.5.0",
    "extra-tags": "^0.5.4",
    "extra-timers": "^0.3.0",
    "fastify": "^4.15.0",
    "return-style": "^3.0.1",
    "rxjs": "^7.8.2",
    "value-getter": "^0.3.3",
    "you-died": "^0.4.6"
  }
}

{
  "private": true,
  "name": "pubsub",
  "version": "0.3.1",
  "main": "lib/index.js",
  "repository": "git@github.com:BlackGlory/pubsub.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "jest --runInBand --config jest.config.js",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --runInBand --coverage --config jest.config.js",
    "dev": "nodemon",
    "dev:http2": "cross-env PUBSUB_HTTP2=true nodemon",
    "clean": "rimraf lib",
    "build": "run-s build:*",
    "build:compile": "tsc --project tsconfig.build.json",
    "build:patch": "tscpaths --project tsconfig.build.json --src ./src --out ./lib",
    "start": "node lib/index.js",
    "start:pm2": "pm2 start lib/index.js --name 'pubsub' --wait-ready",
    "start:http2": "cross-env PUBSUB_HTTP2=true node lib/index.js",
    "docker:build": "docker build --tag pubsub .",
    "docker:test": "docker-compose --file docker-compose.test.yml run --rm test",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint build test",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@blackglory/http-status": "^1.0.0",
    "@blackglory/jest-matchers": "^0.1.18",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/app-root-path": "^1.2.4",
    "@types/better-sqlite3": "^5.4.1",
    "@types/common-tags": "^1.8.0",
    "@types/jest": "^26.0.23",
    "@types/jest-json-schema": "^2.1.3",
    "@types/node": "^14.14.44",
    "@types/ws": "^7.4.5",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.29.0",
    "extra-fetch": "^1.7.1",
    "extra-request": "^2.1.4",
    "extra-response": "^0.3.5",
    "husky": "4",
    "jest": "^27.0.4",
    "jest-extended": "^0.11.5",
    "jest-json-schema": "^5.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^5.0.2",
    "pm2": "^5.1.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@blackglory/better-sqlite3-migrations": "^0.1.6",
    "@blackglory/errors": "^1.1.2",
    "@blackglory/go": "^0.1.0",
    "@blackglory/structures": "^0.2.1",
    "@blackglory/types": "^0.4.3",
    "@blackglory/wait-for": "^0.3.2",
    "ajv": "^8.6.0",
    "app-root-path": "^3.0.0",
    "better-sqlite3": "^7.4.1",
    "common-tags": "^1.8.0",
    "dotenv": "^10.0.0",
    "extra-filesystem": "^0.3.2",
    "extra-generator": "^0.2.6",
    "extra-promise": "^0.17.3",
    "extra-timers": "^0.2.1",
    "fastify": "^3.18.0",
    "fastify-bearer-auth": "^6.0.0",
    "fastify-cors": "^6.0.1",
    "fastify-metrics": "^7.2.3",
    "fastify-plugin": "^3.0.0",
    "hotypes": "^0.2.3",
    "justypes": "^0.1.2",
    "migrations-file": "^0.1.8",
    "prom-client": "^13.1.0",
    "return-style": "^0.12.3",
    "rxjs": "^7.1.0",
    "value-getter": "^0.1.15",
    "ws": "^7.5.0"
  }
}

{
  "private": true,
  "name": "pubsub",
  "version": "0.1.0",
  "main": "lib/index.js",
  "repository": "git@github.com:BlackGlory/pubsub.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "jest --config jest.config.js",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --coverage --config jest.config.js",
    "dev": "nodemon",
    "dev:http2": "PUBSUB_HTTP2=true nodemon",
    "clean": "rimraf lib",
    "build": "run-s build:*",
    "build:compile": "cross-env NODE_ENV=production tsc --project tsconfig.build.json",
    "build:patch": "tscpaths --project tsconfig.build.json --src ./src --out ./lib",
    "start": "cross-env NODE_ENV=production node lib/index.js",
    "start:pm2": "cross-env NODE_ENV=production pm2 start lib/index.js --name 'pubsub' --wait-ready",
    "start:http2": "cross-env NODE_ENV=production PUBSUB_HTTP2=true node lib/index.js",
    "docker:build": "docker build --tag pubsub .",
    "docker:test": "docker-compose --file docker-compose.test.yml run --rm sut",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint build test",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@blackglory/jest-matchers": "^0.1.7",
    "@blackglory/wait-for": "^0.2.6",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/app-root-path": "^1.2.4",
    "@types/better-sqlite3": "^5.4.1",
    "@types/common-tags": "^1.8.0",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.20",
    "@types/jest-json-schema": "^2.1.3",
    "@types/node": "^14.14.22",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.18.0",
    "extra-fetch": "^0.1.10",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "jest-json-schema": "^5.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^4.3.0",
    "pm2": "^4.5.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.1.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.1.3",
    "ws": "^7.4.2"
  },
  "dependencies": {
    "@blackglory/better-sqlite3-migrations": "^0.1.1",
    "@blackglory/errors": "^0.1.4",
    "@blackglory/structures": "^0.1.9",
    "@blackglory/types": "^0.2.9",
    "ajv": "^7.0.3",
    "app-root-path": "^3.0.0",
    "better-sqlite3": "^7.1.2",
    "common-tags": "^1.8.0",
    "dotenv": "^8.2.0",
    "extra-promise": "^0.13.15",
    "fastify": "^3.11.0",
    "fastify-bearer-auth": "^5.0.2",
    "fastify-cors": "^5.2.0",
    "fastify-plugin": "^3.0.0",
    "fastify-websocket": "^2.1.0",
    "fs-extra": "^9.1.0",
    "migrations-file": "^0.1.1",
    "return-style": "^0.11.4",
    "rxjs": "^7.0.0-beta.10",
    "value-getter": "^0.1.7"
  }
}

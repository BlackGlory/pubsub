{
  "private": true,
  "name": "pubsub",
  "version": "0.1.0",
  "main": "lib/index.js",
  "repository": "git@github.com:BlackGlory/pubsub.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "jest --config jest.config.js",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "coverage": "jest --coverage --config jest.config.js",
    "dev": "nodemon",
    "dev:http2": "PUBSUB_HTTP2=true nodemon",
    "clean": "rm -rf lib",
    "build": "cross-env NODE_ENV=production tsc --project tsconfig.build.json && tscpaths --project tsconfig.build.json --src ./src --out ./lib",
    "start": "cross-env NODE_ENV=production node lib/index.js",
    "start:http2": "cross-env NODE_ENV=production PUBSUB_HTTP2=true node lib/index.js",
    "docker:build": "docker build --tag pubsub .",
    "docker:test": "docker-compose --file docker-compose.test.yml run --rm sut",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test && yarn build",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@blackglory/jest-matchers": "^0.1.7",
    "@blackglory/wait-for": "^0.2.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/app-root-path": "^1.2.4",
    "@types/better-sqlite3": "^5.4.1",
    "@types/common-tags": "^1.8.0",
    "@types/eventsource": "^1.1.5",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.19",
    "@types/jest-json-schema": "^2.1.3",
    "@types/node": "^14.14.19",
    "@types/node-fetch": "^2.5.7",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.17.0",
    "eventsource": "^1.0.7",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "jest-json-schema": "^2.1.0",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.6",
    "pino-pretty": "^4.3.0",
    "standard-version": "^9.1.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.1.3",
    "ws": "^7.4.2"
  },
  "dependencies": {
    "@blackglory/better-sqlite3-migrations": "^0.1.1",
    "@blackglory/errors": "^0.1.2",
    "@blackglory/structures": "^0.1.3",
    "@blackglory/types": "^0.2.1",
    "ajv": "^7.0.2",
    "app-root-path": "^3.0.0",
    "better-sqlite3": "^7.1.2",
    "common-tags": "^1.8.0",
    "dotenv": "^8.2.0",
    "extra-promise": "^0.13.8",
    "fastify": "^3.9.2",
    "fastify-bearer-auth": "^5.0.2",
    "fastify-cors": "^5.1.0",
    "fastify-plugin": "^3.0.0",
    "fastify-websocket": "^2.0.11",
    "fs-extra": "^9.0.1",
    "migrations-file": "^0.1.1",
    "return-style": "^0.10.1",
    "rxjs": "^7.0.0-beta.9",
    "value-getter": "^0.1.4"
  }
}
